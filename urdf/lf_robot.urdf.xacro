<?xml version="1.0"?>
<robot name="lf_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="inertia_macro.xacro"/>
    
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    
    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <material name="green">
        <color rgba="0 1 0 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>

    <material name="purple">
        <color rgba="0.5 0 0.5 1"/>
    </material>

    <!--BASE LINK-->
    <link name="base_link">
    </link>

    <!--BODY JOINT-->
    <joint name="body_joint" type="fixed">
        <parent link="base_link"/>
        <child link="body_link"/>
        <origin xyz="-0.1 0 0"/>
    </joint>

    <!--BODY LINK-->
    <link name="body_link">
        <visual>
            <origin xyz="0.25 0 0.125"/>
            <geometry>
                <box size="0.7 0.5 0.25"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <origin xyz="0.35 0 0.125"/>
            <geometry>
                <box size="0.7 0.5 0.25"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.3" x="0.7" y="0.5" z="0.25">
            <origin xyz="0.35 0 0.125" rpy="0 0 0"/>
        </xacro:inertial_box>

    </link>

    <!--RIGHT WHEEL LINK-->
    <link name="right_wheel_link">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="green"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!--RIGHT WHEEL JOINT-->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
        <origin xyz="0.4 -0.275 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!--LEFT WHEEL LINK-->
    <link name="left_wheel_link">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="green"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!--LEFT WHEEL JOINT-->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
        <origin xyz="0.4 0.275 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!--FRONT WHEEL LINK-->
    <link name="front_wheel_link">
        <visual>
            <origin xyz="0.2 0 0"/>
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.2 0 0"/>
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.1">
            <origin xyz="0.2 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
    
    <!--FRONT WHEEL JOINT-->
    <joint name="front_wheel_joint" type="fixed">
        <parent link="body_link"/>
        <child link="front_wheel_link"/>
        <origin xyz="-0.15 0 0" rpy="0 0 0"/>
    </joint>

        <joint name="laser_joint" type="fixed">
        <parent link="body_link"/>
        <child link="laser_frame"/>
        <origin xyz="0.7 0 0.1" rpy="0 1.57 0"/>
    </joint>

    <link name="laser_frame">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.03"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" radius="0.05" length="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
</robot>